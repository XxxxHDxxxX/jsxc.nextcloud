{
    "require": {
        "sabre/xml": "^1.2",
        "sabre/uri": "~1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^8",
        "friendsofphp/php-cs-fixer": "^2.14"
    },
    "scripts": {
        "test": "phpunit --configuration phpunit.xml --fail-on-warning",
        "cs:check": "php-cs-fixer fix --dry-run --diff",
        "cs:fix": "php-cs-fixer fix",
        "lint": "find . -name \\*.php -not -path './vendor/*' -exec php -l \"{}\" \\;"
    }
}
